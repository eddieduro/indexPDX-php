<!DOCTYPE html>
<html>
    {% include 'partials/head.html'%}
    <body>
    {% include 'partials/nav.html'%}
    <main>
        <div class="container">
            <div class="edit-name">
                <h1>{{ store.getName }}</h1>
                <span><a href="/store/{{ store.getId }}/edit"><i class="fa fa-pencil"></i></a></span>
            </div>
            <hr>
            {% if brands is not empty %}
            <h5> Brands available at {{store.getName}}:</h5>
            <ul>
            {% for brand in brands %}
                <li><h5><a href="/brand/{{ brand.getId }}">{{ brand.getName }}</a></h5></li>
                <form action="/store/{{ store.getId }}/brand/{{ brand.getId }}/delete" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button type="submit" class="btn icon-btn"><i class="fa fa-times"></i></button>
                </form>
            {% endfor %}
            </ul>
            {% endif %}
            <h5>Add brands to {{ store.getName }}</h5>
            <div class="row">
                <form class="col s12" action="/store/{{ store.getId }}/add_brand" method="post">
                    <div class="input-field col s12">
                        <label for="name">Brand Name:</label>
                        <input type="text" name="name">
                    </div>
                    <button type="submit" class="btn waves-effect waves-light add-btn">Add</button>
                </form>
            </div>
        </div>
    </main>

    {% include 'partials/footer.html'%}
    </body>
</html>
