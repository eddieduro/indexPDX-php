<!DOCTYPE html>
<html>
    {% include 'partials/head.html'%}
    <body>
    {% include 'partials/nav.html'%}
    <main>
        <div class="container">
            {% if stores is not empty %}
            <h1>Stores:</h1>
            <hr>
            <ul>
            {% for store in stores %}
                <li><h5><a href="/store/{{ store.getId }}">{{ store.getName }}</a></h5></li>
            {% endfor %}
            {% endif %}
            </ul>
            <h4>Add stores to your list!</h4>
            <div class="row">
                <form class="col s12" action="/add_store" method="post">
                    <div class="input-field col s12">
                        <label for="name">Store Name:</label>
                        <input type="text" name="name">
                    </div>
                    <button type="submit" class="btn waves-effect waves-light add-btn">Add</button>
                </form>

                <form class="col s6" action="/delete_stores" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button type="submit" class="btn waves-effect waves-light">Delete All</button>
                </form>
            </div>
        </div>
    </main>

    {% include 'partials/footer.html'%}
    </body>
</html>
